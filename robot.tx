Program:
  'begin'
    commands*=Command
  'end'
;

Command:
  InitialCommand | MoveCommand | GoToCommand | CircleCommand | DotCommand
;

InitialCommand:
  'initial' x=INT ',' y=INT
;

MoveCommand:
  direction=Direction (steps=INT)?
;

GoToCommand:
  'goto' x=INT ',' y=INT
;

CircleCommand:
  'circle' radius=INT
;

DotCommand:
  'dot' size=INT
;

Direction:
  "up"|"down"|"left"|"right"
;

Comment:
  /\/\/.*$/
;